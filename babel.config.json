{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current"
        }
      }
    ],
    ["@babel/preset-typescript"]
  ],
  "plugins": [
    [
      "inline-dotenv",
      {
        "path": "./.env"
      }
    ],
    [
      "module-resolver",
      {
        "alias": {
          "@database": "./src/database/index",
          "@knexfile": "./knexfile",
          "@decorators": "./src/decorators",
          "@entities": "./src/entities"
        }
      }
    ]
  ],
  "ignore": [
    "**/*.d.ts"
  ]
}
